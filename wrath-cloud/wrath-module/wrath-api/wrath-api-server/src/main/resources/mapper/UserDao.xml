<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persional.wrath.dao.UserDao">

    <select id="getUserByMobile" resultType="persional.wrath.entity.UserEntity">
        select * from tb_user where mobile = #{value}
    </select>

    <select id="getUserByUserId" resultType="persional.wrath.entity.UserEntity">
        select * from tb_user where id = #{value}
    </select>
</mapper>